---
import { Icon } from 'astro-icon/components';

const frontendSkills = [
	{
		name: 'React',
		icon: 'mdi:react',
	},
	{
		name: 'Astro',
		icon: 'simple-icons:astro',
	},
	{
		name: 'Tailwind',
		icon: 'mdi:tailwind',
	},
	{
		name: 'JavaScript',
		icon: 'mdi:language-javascript',
	},
	{
		name: 'TypeScript',
		icon: 'mdi:language-typescript',
	},
];

const backendSkills = [
	{
		name: '.NET',
		icon: 'mdi:dot-net',
	},
	{
		name: 'Node JS',
		icon: 'mdi:nodejs',
	},
	{
		name: 'Java',
		icon: 'mdi:language-java',
	},
	{
		name: 'Spring',
		icon: 'simple-icons:spring',
	},
	{
		name: 'SQL',
		icon: 'mdi:database',
	},
	{
		name: 'MongoDB',
		icon: 'simple-icons:mongodb',
	},
	{
		name: 'Docker',
		icon: 'mdi:docker',
	},
	{
		name: 'Kubernetes',
		icon: 'mdi:kubernetes',
	},
];

const testingSkills = [
	{
		name: 'Python',
		icon: 'mdi:language-python',
	},
	{
		name: 'Selenium',
		icon: 'simple-icons:selenium',
	},
	{
		name: 'Cypress',
		icon: 'simple-icons:cypress',
	},
	{
		name: 'Playwright',
		icon: 'devicon-plain:playwright',
	},
	{
		name: 'Postman',
		icon: 'devicon-plain:postman',
	},
	{
		name: 'Insomnia',
		icon: 'devicon-plain:insomnia',
	},
];

const toolsSkills = [
	{
		name: 'Git',
		icon: 'mdi:git',
	},
	{
		name: 'GitHub',
		icon: 'mdi:github',
	},
	{
		name: 'Jira',
		icon: 'mdi:jira',
	},
	{
		name: 'Trello',
