---

<section class="mb-12">
	<article>
		<h2 class="text-2xl mb-4">Skills</h2>
		
		<div class="mb-6">
			<h3 class="text-xl mb-2">Frontend</h3>
			<div class="grid grid-cols-5 md:grid-cols-7 gap-2">
				{
					frontendSkills.map((skill) => (
						<div class="flex flex-col items-center text-center p-2 bg-[#581a21] rounded-lg hover:bg-[#93565d] transition-colors">
							<Icon name={skill.icon} class="text-3xl mb-1" />
							<span class="text-sm">{skill.name}</span>
						</div>
					))
				}
			</div>
		</div>
		
		<div class="mb-6">
			<h3 class="text-xl mb-2">Backend</h3>
			<div class="grid grid-cols-5 md:grid-cols-7 gap-2">
				{
					backendSkills.map((skill) => (
						<div class="flex flex-col items-center text-center p-2 bg-[#581a21] rounded-lg hover:bg-[#93565d] transition-colors">
							<Icon name={skill.icon} class="text-3xl mb-1" />
							<span class="text-sm">{skill.name}</span>
						</div>
					))
				}
			</div>
		</div>
		
		<div class="mb-6">
			<h3 class="text-xl mb-2">Testing</h3>
			<div class="grid grid-cols-5 md:grid-cols-7 gap-2">
				{
					testingSkills.map((skill) => (
						<div class="flex flex-col items-center text-center p-2 bg-[#581a21] rounded-lg hover:bg-[#93565d] transition-colors">
							<Icon name={skill.icon} class="text-3xl mb-1" />
							<span class="text-sm">{skill.name}</span>
						</div>
					))
				}
			</div>
		</div>
		
		<div class="mb-6">
			<h3 class="text-xl mb-2">Tools</h3>
			<div class="grid grid-cols-5 md:grid-cols-7 gap-2">
				{
					toolsSkills.map((skill) => (
						<div class="flex flex-col items-center text-center p-2 bg-[#581a21] rounded-lg hover:bg-[#93565d] transition-colors">
							<Icon name={skill.icon} class="text-3xl mb-1" />
							<span class="text-sm">{skill.name}</span>
						</div>
					))
				}
			</div>
		</div>
	</article>
</section>
